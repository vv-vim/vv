{
  "name": "VV",
  "description": "Neovim GUI Client",
  "author": "Igor Gladkoborodov <igor.gladkoborodov@gmail.com>",
  "version": "1.7.0",
  "private": true,
  "keywords": [
    "vim",
    "neovim",
    "client",
    "gui",
    "electron"
  ],
  "license": "MIT",
  "main": "./build/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "webpack:build": "rm -rf build/*; webpack --config ./config/webpack.prod.config.js",
    "webpack:watch": "webpack --watch --config ./config/webpack.config.js",
    "start:main": "webpack --watch --config ./config/webpack.main.config.js",
    "start:renderer": "webpack-dev-server --config ./config/webpack.renderer.config.js",
    "start:devserver": "DEV_SERVER=true electron .",
    "start": "electron .",
    "prebuild": "yarn webpack:build",
    "build": "electron-builder -c.extraMetadata.main=build/main.js",
    "postbuild": "cp -r dist/mac/VV.app /Applications; ln -s -f /Applications/VV.app/Contents/Resources/bin/vv /usr/local/bin/vv"
  },
  "build": {
    "appId": "app.vvim.vv",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "files": [
      "build/**/*"
    ],
    "extraResources": [
      "bin/**/*",
      "src/main/preload.js"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "fileAssociations": [
      {
        "ext": "*",
        "name": "Document"
      }
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.49",
    "@babel/preset-env": "^7.0.0-beta.49",
    "babel-core": "7.0.0-bridge.0",
    "babel-loader": "^7.1.4",
    "electron": "^5.0",
    "electron-builder": "^21.1",
    "eslint": "^6.2",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.1.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.5",
    "lint-staged": ">=8",
    "prettier": "^1.16.4",
    "uglify-es": "3.3.9",
    "webpack": "^4.9.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.1.2"
  },
  "dependencies": {
    "child_process": "^1.0.2",
    "electron-store": "^4.0",
    "lodash": "^4.17.15",
    "msgpack-lite": "^0.1.26",
    "@pixi/app": "^5.1.2",
    "@pixi/core": "^5.1.2",
    "@pixi/ticker": "^5.1.1",
    "@pixi/sprite": "^5.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
